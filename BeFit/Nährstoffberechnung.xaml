		<RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="131,217,0,0" VerticalAlignment="Top"/>
		<RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="279,217,0,0" VerticalAlignment="Top"/>
		<RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="424,217,0,0" VerticalAlignment="Top"/>
		<RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="566,217,0,0" VerticalAlignment="Top"/>
