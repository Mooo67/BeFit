		<RadioButton Content="Abnehmen" HorizontalAlignment="Left" Margin="203,290,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked_1"/>
		<RadioButton Content="Gewicht halten" HorizontalAlignment="Left" Margin="351,290,0,0" VerticalAlignment="Top"/>
		<RadioButton Content="Zunehmen" HorizontalAlignment="Left" Margin="516,290,0,0" VerticalAlignment="Top"/>
		<Button Content="Zu den Ergebnissen" HorizontalAlignment="Center" Margin="0,345,0,0" VerticalAlignment="Top" Height="24" Width="132" Click="Button_Click"/>

	</Grid>
</Window>
